{
  "name": "inventory-management-system",
  "version": "1.0.0",
  "description": "网页版智享进销存管理系统",
  "main": "index.js",
  "scripts": {
    "dev": "next dev",
    "build": "prisma generate && next build",
    "start": "next start",
    "lint": "next lint",
    "postinstall": "prisma generate && prisma migrate deploy",
    "deploy:check": "node scripts/deployment-check.js",
    "deploy:build": "npm run build && npm run deploy:check",
    "deploy:docker": "docker-compose up -d --build",
    "deploy:docker-dev": "docker-compose -f docker-compose.dev.yml up -d --build",
    "db:migrate": "npx prisma migrate deploy",
    "db:generate": "npx prisma generate",
    "db:reset": "npx prisma migrate reset",
    "db:seed": "npx prisma db seed",
    "db:push": "npx prisma db push",
    "production": "NODE_ENV=production npm start"
  },
  "dependencies": {
    "@ant-design/icons": "^5.2.0",
    "@hookform/resolvers": "^3.3.0",
    "@next-auth/prisma-adapter": "^1.0.7",
    "@prisma/client": "^5.0.0",
    "antd": "^5.12.0",
    "autoprefixer": "^10.4.0",
    "axios": "^1.6.0",
    "bcryptjs": "^2.4.3",
    "dayjs": "^1.11.13",
    "dotenv": "^16.5.0",
    "jsonwebtoken": "^9.0.2",
    "jspdf": "^3.0.1",
    "jspdf-autotable": "^5.0.2",
    "next": "^14.0.0",
    "next-auth": "^4.24.0",
    "postcss": "^8.4.0",
    "prisma": "^5.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-hook-form": "^7.48.0",
    "recharts": "^2.8.0",
    "swr": "^2.2.0",
    "tailwindcss": "^3.3.0",
    "xlsx": "^0.18.5",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.0",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "eslint": "^8.0.0",
    "eslint-config-next": "^14.0.0",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "智享进销存",
    "inventory",
    "management",
    "nextjs",
    "react",
    "typescript"
  ],
  "author": "Your Name",
  "license": "MIT"
}
